pipeline {
    agent any

    tools {
        maven "maven3"
    }

    stages {
        stage('Build') {
            steps {
                git branch: 'main', url:'https://github.com/escaravelho/trabalho5.1_inf335'

                sh "mvn -Dmaven.test.failure.ignore=false clean package"

            }

            post {
                success {
                    junit '**/target/surefire-reports/TEST-*.xml'
                    archiveArtifacts 'target/*.jar'
                }
            }
        }
    }
}
